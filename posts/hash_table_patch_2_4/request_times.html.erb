</style>

<script>

var graph_data = [];
var palette = new Rickshaw.Color.Palette();

<%
  require "json"

  hash_data = {}
  hash_data["old"] = JSON.parse(File.read "oldhash/process_output.json")
  hash_data["new"] = JSON.parse(File.read "newhash/process_output.json")

  xcoord_by_type = { "old" => 0.0, "new" => 0.6 }
  ["old", "new"].each do |which_data|
    data = hash_data[which_data]
    xcoord = xcoord_by_type[which_data]
    ["50", "90", "95", "99"].each_with_index do |percentile, percentile_index|
      pct = data["processed"]["cohort"]["2.5.0,1000"]["request_percentiles"][percentile]
      %>
      graph_data.push({ name: <%= which_data.capitalize.inspect %> + " hash, " + <%= percentile %> + "th percentile",
                        data: [{ x: <%= xcoord + percentile_index * 0.05 %>, y: <%= pct %> }],
			color: palette.color()
                      })
      <%
    end
  end
   %>

//Rickshaw.Series.zeroFill(graph_data);

var graph = new Rickshaw.Graph( {
        element: document.getElementById("chart"),
        width: 640,
        height: 480,
        unstack: true,
        gapSize: 0.3,
        renderer: 'bar',
        series: graph_data
} );

var legend = new Rickshaw.Graph.Legend( {
        element: document.querySelector('#legend'), 
        graph: graph
});

//var xAxis = new Rickshaw.Graph.Axis.Time({
//    graph: graph
//});

var yAxis = new Rickshaw.Graph.Axis.Y({
    graph: graph
});

graph.render();
//xAxis.render();
yAxis.render();
</script>
