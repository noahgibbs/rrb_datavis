<script>

var graph_data = [];
var series = [];
var series_name = "";
var palette = new Rickshaw.Color.Palette();

<%
   require "json"

   oldhash_data = JSON.parse(File.read "oldhash/process_output.json")
   newhash_data = JSON.parse(File.read "newhash/process_output.json")

   newhash_startup = newhash_data["startup_by_cohort"]["2.5.0,0"]
   oldhash_startup = oldhash_data["startup_by_cohort"]["2.5.0,0"]

   randomized_times = (1..newhash_startup.size).map { rand() }.sort

   # To illustrate a big 'clump' of startup times, put them at randomized times between 0 and 1
   # The intent here is to illustrate the contrast between old and new startup times, showing differences even when there's overlap.
   newhash_series = []
   oldhash_series = []
   randomized_times.each_with_index do |t, i|
     newhash_series.push x: t, y: newhash_startup[i]
     oldhash_series.push x: t, y: oldhash_startup[i]
   end
   %>

oldhash_series = <%= JSON.pretty_generate(oldhash_series) %>;
newhash_series = <%= JSON.pretty_generate(newhash_series) %>;

graph_data = []
graph_data.push({ name: "Discourse Startup w/ Open-Addr Hashing", data: newhash_series, color: "steelblue" });
graph_data.push({ name: "Discourse Startup w/ Closed-Addr Hashing", data: oldhash_series, color: "red" });

//Rickshaw.Series.zeroFill(graph_data);

var graph = new Rickshaw.Graph( {
        element: document.getElementById("chart"),
        width: 640,
        height: 480,
        unstack: true,
        //gapSize: 0.20,
        renderer: 'scatterplot',
        series: graph_data
} );

var hoverDetail = new Rickshaw.Graph.HoverDetail( {
        graph: graph,
        xFormatter: function(x) { return ""; }
} );

var legend = new Rickshaw.Graph.Legend( {
        element: document.querySelector('#legend'), 
        graph: graph
});

var xAxis = new Rickshaw.Graph.Axis.Time({
    graph: graph
});

var yAxis = new Rickshaw.Graph.Axis.Y({
    graph: graph
});

graph.render();
xAxis.render();
yAxis.render();
</script>
