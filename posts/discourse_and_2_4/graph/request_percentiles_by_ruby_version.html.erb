<script>

var graph_data = [];
var series = [];
var series_name = "";
var palette = new Rickshaw.Color.Palette();

<%
   x_coord = 0
   ["2.3.4,100", "2.5.0,100"].each do |ruby_cohort|
     ruby_version, warmup_iters = ruby_cohort.split(",")
     ["50", "90", "95", "99"].each do |percentile|
       pct = data["processed"]["cohort"][ruby_cohort]["request_percentiles"][percentile]
       %>
       graph_data.push({ name: "Ruby " + <%= ruby_version.inspect %> + ", " + <%= percentile.inspect %> + "th percentile",
                         data: [{ x: <%= x_coord %>, y: <%= pct %> }], color: palette.color() });
       <%
       x_coord += 1
     end
   end
   %>

//Rickshaw.Series.zeroFill(graph_data);

var graph = new Rickshaw.Graph( {
        element: document.getElementById("chart"),
        width: 360,
        height: 480,
        unstack: true,
        //gapSize: 0.2,
        renderer: 'bar',
	padding: { left: 0.10, right: 0.10, top: 0.05, bottom: 0.05 },
        series: graph_data
} );

var hoverDetail = new Rickshaw.Graph.HoverDetail( {
        graph: graph,
        xFormatter: function(x) { return ""; }
} );

var legend = new Rickshaw.Graph.Legend( {
        element: document.querySelector('#legend'), 
        graph: graph
});

//var xAxis = new Rickshaw.Graph.Axis.Time({
//    graph: graph
//});

var yAxis = new Rickshaw.Graph.Axis.Y({
    graph: graph
});

var highlighter = new Rickshaw.Graph.Behavior.Series.Highlight({
    graph: graph,
    legend: legend,
    disabledColor: function() { return 'rgba(0, 0, 0, 0.2)' }
});

var highlighter = new Rickshaw.Graph.Behavior.Series.Toggle({
    graph: graph,
    legend: legend
});

graph.render();
//xAxis.render();
yAxis.render();
</script>
